<UserControl x:Class="MediTechDesktopApp.Views.MedicalRecordView"
             Loaded="UserControl_Loaded"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MediTechDesktopApp.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="350" d:DesignWidth="700">

    <UserControl.DataContext>
        <vm:MedicalRecordViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <!-- Appointment ID -->
            <TextBox x:Name="AppointmentIdBox"
                     Width="100" Margin="5"
                     Foreground="Gray"
                     Text="Appointment ID"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>

            <!-- Diagnosis -->
            <TextBox x:Name="DiagnosisBox"
                     Width="200" Margin="5"
                     Foreground="Gray"
                     Text="Diagnosis"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>

            <!-- Visit Summary -->
            <TextBox x:Name="VisitSummaryBox"
                     Width="200" Margin="5"
                     Foreground="Gray"
                     Text="Visit Summary"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>

            <!-- Doctor Notes -->
            <TextBox x:Name="DoctorNotesBox"
                     Width="200" Margin="5"
                     Foreground="Gray"
                     Text="Doctor Notes"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>

            <Button Content="Add Record"
                    Margin="10,0,0,0"
                    Click="AddRecord_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Records}"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"            Binding="{Binding RecordId}"       Width="50"/>
                <DataGridTextColumn Header="AppointmentID" Binding="{Binding AppointmentId}"  Width="100"/>
                <DataGridTextColumn Header="Diagnosis"     Binding="{Binding Diagnosis}"      Width="200"/>
                <DataGridTextColumn Header="VisitSummary"  Binding="{Binding VisitSummary}"   Width="200"/>
                <DataGridTextColumn Header="DoctorNotes"   Binding="{Binding DoctorNotes}"    Width="200"/>
                <DataGridTextColumn Header="CreatedAt"     Binding="{Binding CreatedAt}"      Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
