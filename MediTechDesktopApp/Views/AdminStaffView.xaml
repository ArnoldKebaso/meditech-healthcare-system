<!-- File: Views\AdminStaffView.xaml -->
<UserControl x:Class="MediTechDesktopApp.Views.AdminStaffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MediTechDesktopApp.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600"
             Loaded="UserControl_Loaded">

    <UserControl.DataContext>
        <vm:AdminStaffViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Row -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <!-- First Name -->
            <TextBox x:Name="FirstNameBox"
                     Width="120" Margin="5"
                     Foreground="Gray"
                     Text="First Name"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus" />

            <!-- Last Name -->
            <TextBox x:Name="LastNameBox"
                     Width="120" Margin="5"
                     Foreground="Gray"
                     Text="Last Name"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus" />

            <!-- Role -->
            <TextBox x:Name="RoleBox"
                     Width="150" Margin="5"
                     Foreground="Gray"
                     Text="Role"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus" />

            <!-- Phone -->
            <TextBox x:Name="PhoneBox"
                     Width="120" Margin="5"
                     Foreground="Gray"
                     Text="Phone"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus" />

            <!-- Email -->
            <TextBox x:Name="EmailBox"
                     Width="180" Margin="5"
                     Foreground="Gray"
                     Text="Email"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus" />

            <Button Content="Add Admin"
                    Margin="10,0,0,0"
                    Click="AddAdmin_Click" />
        </StackPanel>

        <!-- DataGrid Row -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Admins}"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding StaffId}" Width="50"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="100"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="100"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="150"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding ContactPhone}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding ContactEmail}" Width="180"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
