<!-- File: Views\TreatmentView.xaml -->
<UserControl x:Class="MediTechDesktopApp.Views.TreatmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MediTechDesktopApp.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600"
             Loaded="UserControl_Loaded">

    <UserControl.DataContext>
        <vm:TreatmentViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Row -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <!-- Name -->
            <TextBox x:Name="NameBox"
                     Width="150" Margin="5"
                     Foreground="Gray"
                     Text="Name"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus" />

            <!-- Description -->
            <TextBox x:Name="DescBox"
                     Width="250" Margin="5"
                     Foreground="Gray"
                     Text="Description"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus" />

            <Button Content="Add Treatment"
                    Margin="10,0,0,0"
                    Click="AddTreatment_Click" />
        </StackPanel>

        <!-- DataGrid Row -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Treatments}"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TreatmentId}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="180"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
