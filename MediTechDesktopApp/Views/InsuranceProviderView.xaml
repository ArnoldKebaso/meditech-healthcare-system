<UserControl x:Class="MediTechDesktopApp.Views.InsuranceProviderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MediTechDesktopApp.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="350" d:DesignWidth="700"
             Loaded="UserControl_Loaded">

    <UserControl.DataContext>
        <vm:InsuranceProviderViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Row -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <TextBox x:Name="ProvNameBox"
                     Width="200" Margin="5"
                     Foreground="Gray"
                     Text="Provider Name"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>
            <TextBox x:Name="ProvPhoneBox"
                     Width="120" Margin="5"
                     Foreground="Gray"
                     Text="Phone"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>
            <TextBox x:Name="ProvEmailBox"
                     Width="200" Margin="5"
                     Foreground="Gray"
                     Text="Email"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>
            <Button Content="Add Provider"
                    Margin="10,0,0,0"
                    Click="AddProvider_Click"/>
        </StackPanel>

        <!-- DataGrid Row -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Providers}"
                  Margin="0,10,0,0"
                  SelectedItem="{Binding SelectedProvider}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProviderId}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding ContactPhone}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding ContactEmail}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
