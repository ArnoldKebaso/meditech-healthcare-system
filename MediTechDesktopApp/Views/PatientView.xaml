<!-- File: Views\PatientView.xaml -->
<UserControl x:Class="MediTechDesktopApp.Views.PatientView"
             Loaded="UserControl_Loaded"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MediTechDesktopApp.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">

    <UserControl.DataContext>
        <vm:PatientViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="167*"/>
            <RowDefinition Height="69*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <!-- First Name -->
            <TextBox x:Name="FirstNameBox"
                     Width="120" Margin="5"
                     Foreground="Gray"
                     Text="First Name"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>

            <!-- Last Name -->
            <TextBox x:Name="LastNameBox"
                     Width="120" Margin="5"
                     Foreground="Gray"
                     Text="Last Name"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>

            <!-- Date of Birth -->
            <DatePicker x:Name="DobPicker"
                        Width="130" Margin="5"
                        SelectedDate="{x:Static sys:DateTime.Now}"/>

            <!-- Gender ComboBox (no placeholder needed) -->
            <ComboBox x:Name="GenderCombo" Width="100" Margin="5" SelectedIndex="0">
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>

            <!-- Contact Phone -->
            <TextBox x:Name="PhoneBox"
                     Width="100" Margin="5"
                     Foreground="Gray"
                     Text="Phone"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>

            <!-- Contact Email -->
            <TextBox x:Name="EmailBox"
                     Width="150" Margin="5"
                     Foreground="Gray"
                     Text="Email"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>

            <!-- Address -->
            <TextBox x:Name="AddressBox"
                     Width="200" Margin="5"
                     Foreground="Gray"
                     Text="Address"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>

            <Button Content="Add Patient"
                    Margin="10,0,0,0"
                    Click="AddPatient_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Patients}"
                  Margin="0,10,0,0" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PatientId}" Width="50"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}"/>
                <DataGridTextColumn Header="DOB" Binding="{Binding DateOfBirth}"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding ContactPhone}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding ContactEmail}"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
