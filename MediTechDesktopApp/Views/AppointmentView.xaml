<UserControl x:Class="MediTechDesktopApp.Views.AppointmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MediTechDesktopApp.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="350" d:DesignWidth="700"
             Loaded="UserControl_Loaded">

    <UserControl.DataContext>
        <vm:AppointmentViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Row -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <!-- Patient ID -->
            <TextBox x:Name="PatientIdBox"
                     Width="80" Margin="5"
                     Foreground="Gray"
                     Text="Patient ID"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus" />

            <!-- Doctor ID -->
            <TextBox x:Name="DoctorIdBox"
                     Width="80" Margin="5"
                     Foreground="Gray"
                     Text="Doctor ID"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus" />

            <!-- Appointment Date -->
            <!-- We'll set SelectedDate in code‐behind instead of using x:Static -->
            <DatePicker x:Name="DatePickerAppt"
                        Width="140" Margin="5" />

            <!-- Status -->
            <ComboBox x:Name="StatusCombo" Width="150" Margin="5">
                <ComboBoxItem Content="Pending"/>
                <ComboBoxItem Content="Confirmed"/>
                <ComboBoxItem Content="Completed"/>
                <ComboBoxItem Content="Canceled"/>
                <ComboBoxItem Content="Rescheduled"/>
                <ComboBoxItem Content="No Show"/>
            </ComboBox>

            <!-- Notes -->
            <TextBox x:Name="NotesBox"
                     Width="200" Margin="5"
                     Foreground="Gray"
                     Text="Notes"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus" />

            <Button Content="Add Appointment"
                    Margin="10,0,0,0"
                    Click="AddAppointment_Click" />
        </StackPanel>

        <!-- DataGrid Row -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Appointments}"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding AppointmentId}" Width="50"/>
                <DataGridTextColumn Header="PatientID" Binding="{Binding PatientId}" Width="80"/>
                <DataGridTextColumn Header="DoctorID" Binding="{Binding DoctorId}" Width="80"/>
                <DataGridTextColumn Header="Date" Binding="{Binding AppointmentDate}" Width="140"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
