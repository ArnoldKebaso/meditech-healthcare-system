<UserControl
    x:Class="MediTechDesktopApp.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#FFF5F5F5"
    Height="Auto"
    Width="Auto">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<StackPanel>

			<!-- HERO SECTION -->
			<Grid Height="200" Background="#FF2C6E49">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="2*" />
				</Grid.ColumnDefinitions>

				<Image
                    Grid.Column="0"
                    Source="pack://application:,,,/Assets/clinic_hero.jpg"
                    Stretch="UniformToFill"
                    Opacity="0.6"/>
				<StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="30">
					<TextBlock
                        Text="About MediTech Management"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        TextWrapping="Wrap"/>
					<TextBlock
                        Text="Centralizing patient records, treatment plans, and personnel info into one desktop portal."
                        FontSize="16"
                        Foreground="White"
                        Margin="0,10,0,0"
                        TextWrapping="Wrap"/>
				</StackPanel>
			</Grid>

			<!-- COMPANY DESCRIPTION -->
			<Border
                Background="White"
                CornerRadius="6"
                Padding="20"
                Margin="20,30,20,10">
				<Border.Effect>
					<DropShadowEffect
                        Color="Black"
                        BlurRadius="8"
                        ShadowDepth="2"
                        Opacity="0.2"/>
				</Border.Effect>
				<TextBlock
                    TextWrapping="Wrap"
                    FontSize="16"
                    Foreground="#FF333333">
					MediTech Innovations, a leading healthcare technology firm, is embarking on a project
					to centralize their patient records, treatment plans, and personnel information into
					a cloud-based relational database. This initiative is intended to streamline access
					and management of crucial healthcare data and resources through a desktop application
					for their global team of doctors, nurses, and administrative staff. The project
					necessitates detailed development and documentation, including a comprehensive
					architectural design of the application.
				</TextBlock>
			</Border>

			<!-- FEATURES GRID -->
			<TextBlock
                Text="What We Streamline"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="#FF2F4F4F"
                Margin="20,20,0,10"/>
			<UniformGrid Columns="2" Margin="20">

				<Border Background="White" CornerRadius="6" Padding="15" Margin="8">
					<Border.Effect>
						<DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2" Opacity="0.15"/>
					</Border.Effect>
					<StackPanel>
						<TextBlock
                            Text="ðŸ§‘â€ðŸ¤â€ðŸ§‘ Patient Records"
                            FontSize="18"
                            FontWeight="Bold"
                            Margin="0,0,0,6"/>
						<TextBlock
                            Text="Secure intake, storage, and retrieval of patient information."
                            TextWrapping="Wrap"/>
					</StackPanel>
				</Border>

				<Border Background="White" CornerRadius="6" Padding="15" Margin="8">
					<Border.Effect>
						<DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2" Opacity="0.15"/>
					</Border.Effect>
					<StackPanel>
						<TextBlock
                            Text="ðŸ“… Scheduling"
                            FontSize="18"
                            FontWeight="Bold"
                            Margin="0,0,0,6"/>
						<TextBlock
                            Text="Easy appointment booking, rescheduling, and provider calendars."
                            TextWrapping="Wrap"/>
					</StackPanel>
				</Border>

				<Border Background="White" CornerRadius="6" Padding="15" Margin="8">
					<Border.Effect>
						<DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2" Opacity="0.15"/>
					</Border.Effect>
					<StackPanel>
						<TextBlock
                            Text="ðŸ’Š Prescriptions"
                            FontSize="18"
                            FontWeight="Bold"
                            Margin="0,0,0,6"/>
						<TextBlock
                            Text="Create, track and renew scripts with built-in safety checks."
                            TextWrapping="Wrap"/>
					</StackPanel>
				</Border>

				<Border Background="White" CornerRadius="6" Padding="15" Margin="8">
					<Border.Effect>
						<DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2" Opacity="0.15"/>
					</Border.Effect>
					<StackPanel>
						<TextBlock
                            Text="ðŸ’³ Billing"
                            FontSize="18"
                            FontWeight="Bold"
                            Margin="0,0,0,6"/>
						<TextBlock
                            Text="Generate invoices, process payments, and manage claims."
                            TextWrapping="Wrap"/>
					</StackPanel>
				</Border>

			</UniformGrid>

			<!-- FOOTER CTA -->
			<Border
                Background="#FF2C6E49"
                Padding="30"
                Margin="20"
                CornerRadius="6">
				<StackPanel HorizontalAlignment="Center">
					<TextBlock
                        Text="Ready to see it in action?"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="White"
                        TextAlignment="Center"/>
					<Button
                        Content="Log In Now"
                        Width="160"
                        Padding="10,6"
                        Margin="0,20,0,0"
                        Background="#FFFFC107"
                        Foreground="#FF2C6E49"
                        FontWeight="Bold"
                        Click="LoginNow_Click"
                        Cursor="Hand"/>
				</StackPanel>
			</Border>

		</StackPanel>
	</ScrollViewer>
</UserControl>
