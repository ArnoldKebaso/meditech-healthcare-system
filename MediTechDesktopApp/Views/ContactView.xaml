<!-- Views/ContactView.xaml -->
<UserControl 
    x:Class="MediTechDesktopApp.Views.ContactView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Contact Us" 
            FontSize="24" 
            FontWeight="Bold" 
            Foreground="#FF2F4F4F"/>

        <StackPanel 
            Grid.Row="1" 
            Margin="0,20,0,0" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left">
            <TextBlock 
                Text="MediTech Headquarters" 
                FontSize="18" 
                FontWeight="SemiBold" 
                Foreground="#FF2F4F4F" 
                Margin="0,0,0,10"/>

            <TextBlock 
                Text="1234 Wellness Drive, Suite 100" 
                FontSize="14" 
                Foreground="#FF555555" 
                Margin="0,0,0,5"/>
            <TextBlock 
                Text="Health City, HC 56789" 
                FontSize="14" 
                Foreground="#FF555555" 
                Margin="0,0,0,5"/>
            <TextBlock 
                Text="Phone: (555) 123-4567" 
                FontSize="14" 
                Foreground="#FF555555" 
                Margin="0,0,0,5"/>
            <TextBlock 
                Text="Email: support@meditech.com" 
                FontSize="14" 
                Foreground="#FF555555" 
                Margin="0,0,0,5"/>
            <TextBlock 
                Text="Website: www.meditechmanagement.com" 
                FontSize="14" 
                Foreground="#FF555555" 
                Margin="0,0,0,5"/>
        </StackPanel>
    </Grid>
</UserControl>
