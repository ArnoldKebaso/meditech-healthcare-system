<UserControl
    x:Class="MediTechDesktopApp.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#FFF5F5F5"
    Height="Auto" Width="Auto">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<StackPanel>

			<!-- HERO SECTION -->
			<Grid Height="220" Background="#FF2C6E49">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="2*" />
				</Grid.ColumnDefinitions>

				<!-- Hero Text and CTA -->
				<StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="30">
					<TextBlock Text="Welcome to MediTech Management"
							   FontSize="32"
							   FontWeight="Bold"
							   Foreground="White"
							   TextWrapping="Wrap"/>
					<TextBlock Text="Streamline your clinic’s workflow—from patient intake to billing—on a single platform."
							   FontSize="16"
							   Foreground="White"
							   Margin="0,10,0,0"
							   TextWrapping="Wrap"/>
					<Button Content="Get Started"
							Width="140"
							Padding="10,6"
							Margin="0,20,0,0"
							Background="#FFFFC107"
							Foreground="#FF2C6E49"
							FontWeight="SemiBold"
							Click="GetStarted_Click"
							Cursor="Hand"/>
				</StackPanel>
			</Grid>

			<!-- FEATURES GRID -->
			<TextBlock Text="Key Features"
					   FontSize="24"
					   FontWeight="SemiBold"
					   Foreground="#FF2F4F4F"
					   Margin="20,30,0,10"/>
			<UniformGrid Columns="3" Margin="20">
				<Border Background="White" CornerRadius="6" Padding="15" Margin="8">
					<StackPanel>
						<TextBlock Text="🧑‍🤝‍🧑 Patient Management"
								   FontSize="16"
								   FontWeight="Bold"
								   Margin="0,0,0,6"/>
						<TextBlock Text="Add, edit and search patient records with ease."
								   TextWrapping="Wrap"/>
					</StackPanel>
				</Border>
				<Border Background="White" CornerRadius="6" Padding="15" Margin="8">
					<StackPanel>
						<TextBlock Text="📅 Appointments"
								   FontSize="16"
								   FontWeight="Bold"
								   Margin="0,0,0,6"/>
						<TextBlock Text="Schedule, reschedule or cancel with a few clicks."
								   TextWrapping="Wrap"/>
					</StackPanel>
				</Border>
				<Border Background="White" CornerRadius="6" Padding="15" Margin="8">
					<StackPanel>
						<TextBlock Text="💳 Billing and Invoicing"
								   FontSize="16"
								   FontWeight="Bold"
								   Margin="0,0,0,6"/>
						<TextBlock Text="Generate invoices and record payments securely."
								   TextWrapping="Wrap"/>
					</StackPanel>
				</Border>
			</UniformGrid>

			<!-- FOOTER CTA -->
			<Border Background="#FF2C6E49"
					Padding="30"
					Margin="20"
					CornerRadius="6">
				<StackPanel HorizontalAlignment="Center">
					<TextBlock Text="Ready to elevate your clinic?"
							   FontSize="20"
							   FontWeight="SemiBold"
							   Foreground="White"
							   TextAlignment="Center"/>
					<Button Content="Log In Now"
							Width="160"
							Padding="10,6"
							Margin="0,20,0,0"
							Background="#FFFFC107"
							Foreground="#FF2C6E49"
							FontWeight="Bold"
							Click="LoginNow_Click"
							Cursor="Hand"/>
				</StackPanel>
			</Border>

		</StackPanel>
	</ScrollViewer>
</UserControl>
