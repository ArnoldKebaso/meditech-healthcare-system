<!-- Views/HomeView.xaml -->
<UserControl 
    x:Class="MediTechDesktopApp.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MediTechDesktopApp.Views"
    Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <!-- Top banner area -->
        <Border 
            Grid.Row="0" 
            Background="#FF87CEEB" 
            CornerRadius="0,0,20,20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock 
                    Text="Welcome to MediTech Management" 
                    FontSize="28" 
                    FontWeight="Bold" 
                    Foreground="White" />
                <TextBlock 
                    Text="Your one-stop clinic management solution" 
                    FontSize="16" 
                    Foreground="White" 
                    Margin="0,10,0,0" />
            </StackPanel>
        </Border>

        <!-- Middle area: some simple welcome text or images -->
        <StackPanel 
            Grid.Row="1" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" 
            Margin="20">
            <TextBlock 
                Text="Explore our features:" 
                FontSize="20" 
                FontWeight="SemiBold" 
                Foreground="#FF2F4F4F" 
                Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border 
                    Background="#FFADD8E6" 
                    CornerRadius="10" 
                    Padding="10" 
                    Margin="10" 
                    Width="200" 
                    Height="120">
                    <StackPanel VerticalAlignment="Center" >
                        <TextBlock 
                            Text="●  Patient Management" 
                            Foreground="#FF2F4F4F" 
                            FontSize="14" 
                            Margin="0,5"/>
                        <TextBlock 
                            Text="●  Billing and Invoicing" 
                            Foreground="#FF2F4F4F" 
                            FontSize="14" 
                            Margin="0,5"/>
                        <TextBlock 
                            Text="●  Appointments" 
                            Foreground="#FF2F4F4F" 
                            FontSize="14" 
                            Margin="0,5"/>
                    </StackPanel>
                </Border>
                <Border 
                    Background="#FFB0E0E6" 
                    CornerRadius="10" 
                    Padding="10" 
                    Margin="10" 
                    Width="200" 
                    Height="120">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock 
                            Text="●  Prescriptions" 
                            Foreground="#FF2F4F4F" 
                            FontSize="14" 
                            Margin="0,5"/>
                        <TextBlock 
                            Text="●  Medical Records" 
                            Foreground="#FF2F4F4F" 
                            FontSize="14" 
                            Margin="0,5"/>
                        <TextBlock 
                            Text="●  Reports and Analytics" 
                            Foreground="#FF2F4F4F" 
                            FontSize="14" 
                            Margin="0,5"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- Bottom area: “Log In” button -->
        <StackPanel 
            Grid.Row="2" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Center">
            <Button 
                Content="Click ‘Log In’ on top to access Dashboard" 
                FontSize="16" 
                Foreground="White" 
                Background="#FF6B8E23" 
                Padding="10,5" 
                Cursor="Hand" 
                IsEnabled="False"/>
        </StackPanel>
    </Grid>
</UserControl>
