<UserControl x:Class="MediTechDesktopApp.Views.PatientFileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MediTechDesktopApp.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="350" d:DesignWidth="700"
             Loaded="UserControl_Loaded">

    <UserControl.DataContext>
        <vm:PatientFileViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Row -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <!-- Patient ID -->
            <TextBox x:Name="PfPatientIdBox"
                     Width="80" Margin="5"
                     Foreground="Gray"
                     Text="Patient ID"
                     GotFocus="Placeholder_GotFocus"
                     LostFocus="Placeholder_LostFocus"/>
            <!-- Browse Button & Path Display -->
            <Button Content="Browse File..."
                    Width="100" Margin="5"
                    Click="BrowseFile_Click"/>
            <TextBlock x:Name="SelectedFilePath"
                       Width="300" Margin="5"
                       Text="No file chosen"
                       Foreground="Gray"/>
            <Button Content="Upload File"
                    Margin="10,0,0,0"
                    Click="AddFile_Click"/>
        </StackPanel>

        <!-- DataGrid Row -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Files}"
                  Margin="0,10,0,0"
                  SelectedItem="{Binding SelectedFile}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File ID" Binding="{Binding FileId}" Width="60"/>
                <DataGridTextColumn Header="Patient ID" Binding="{Binding PatientId}" Width="80"/>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="200"/>
                <DataGridTextColumn Header="Type" Binding="{Binding FileType}" Width="80"/>
                <DataGridTextColumn Header="Size (bytes)" Binding="{Binding FileSizeBytes}" Width="100"/>
                <DataGridTextColumn Header="Uploaded At" Binding="{Binding UploadTimestamp}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
