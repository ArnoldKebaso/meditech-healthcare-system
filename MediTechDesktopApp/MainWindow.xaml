<Window x:Class="MediTechDesktopApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MediTechDesktopApp.Views"
        Title="MediTech Desktop App"
        Height="700" Width="1500"
        WindowStartupLocation="CenterScreen">

	<DockPanel>
		<!-- Top navigation bar -->
		<StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    Background="#EEE"
                    HorizontalAlignment="Left"
                    Margin="5">

			<!-- Existing Buttons -->
			<Button x:Name="BtnPatients"
                    Content="Patients"
                    Width="100"
                    Margin="2"
                    Click="BtnPatients_Click"/>

			<Button x:Name="BtnDoctors"
                    Content="Doctors"
                    Width="100"
                    Margin="2"
                    Click="BtnDoctors_Click"/>

			<Button x:Name="BtnNurses"
                    Content="Nurses"
                    Width="100"
                    Margin="2"
                    Click="BtnNurses_Click"/>

			<Button x:Name="BtnAdminStaff"
                    Content="Admin Staff"
                    Width="100"
                    Margin="2"
                    Click="BtnAdminStaff_Click"/>

			<Button x:Name="BtnTreatments"
                    Content="Treatments"
                    Width="100"
                    Margin="2"
                    Click="BtnTreatments_Click"/>

			<Button x:Name="BtnAssignments"
                    Content="Assignments"
                    Width="100"
                    Margin="2"
                    Click="BtnAssignments_Click"/>

			<Button x:Name="BtnFiles"
                    Content="Patient Files"
                    Width="100"
                    Margin="2"
                    Click="BtnFiles_Click"/>

			<Button x:Name="BtnProviders"
                    Content="Providers"
                    Width="100"
                    Margin="2"
                    Click="BtnProviders_Click"/>

			<Button x:Name="BtnInsurance"
                    Content="Insurance"
                    Width="100"
                    Margin="2"
                    Click="BtnInsurance_Click"/>

			<Button x:Name="BtnPatientInsurance"
                    Content="Patient Insurance"
                    Width="120"
                    Margin="2"
                    Click="BtnPatientInsurance_Click"/>

			<!-- ─── NEW BUTTONS FOR THE FOUR SCREENS ─────────────────────────────────── -->
			<Button x:Name="BtnInvoices"
                    Content="Invoices"
                    Width="100"
                    Margin="2"
                    Click="BtnInvoices_Click"/>

			<Button x:Name="BtnPayments"
                    Content="Payments"
                    Width="100"
                    Margin="2"
                    Click="BtnPayments_Click"/>

			<Button x:Name="BtnRecords"
                    Content="Records"
                    Width="100"
                    Margin="2"
                    Click="BtnRecords_Click"/>

			<Button x:Name="BtnPrescriptions"
                    Content="Prescriptions"
                    Width="120"
                    Margin="2"
                    Click="BtnPrescriptions_Click"/>

		</StackPanel>

		<!-- Main content area where we swap in each UserControl -->
		<ContentControl x:Name="ContentArea"
                        DockPanel.Dock="Bottom"
                        Margin="5"/>
	</DockPanel>
</Window>
